<h1><%= @product.name %></h1>
<h4><%= @product.cost %></h4>
<h5><%= @product.origin %></h5>

<div class="product-info">
  <%= @product.info %>
</div>

<% if @product.reviews.any? %>
  <% @product.reviews.each do |review| %>
    <div class="review-panel">
      <span class="rating"><%= review.rating %></span> <%= review.content %><br>
      <small>by <%= review.author %></small></div>
  <% end %>
<% else %>
  <em>No reviews for this product yet!</em>
<% end %>

<hr>
<span><%= link_to "Edit", edit_product_path(@product) %></span> |
<span><%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></span> |
<span><%= link_to "Return to products", products_path %></span> |
<span><%= link_to "Add new review", new_product_review_path(@product) %></span>
